# -----------------------------------------------------------
# STEP 1: IMPORT LIBRARIES
# -----------------------------------------------------------
import numpy as np
import matplotlib.pyplot as plt
import seaborn as sns
from tensorflow.keras.datasets import mnist
from tensorflow.keras.models import Sequential
from tensorflow.keras.layers import Dense, Flatten
from tensorflow.keras.utils import to_categorical
from sklearn.metrics import classification_report, confusion_matrix

# -----------------------------------------------------------
# STEP 2: LOAD THE MNIST DATASET
# -----------------------------------------------------------
(x_train, y_train), (x_test, y_test) = mnist.load_data()

print("Training data shape:", x_train.shape)
print("Testing data shape:", x_test.shape)

# -----------------------------------------------------------
# STEP 3: NORMALIZE IMAGES (0–255 → 0–1)
# -----------------------------------------------------------
x_train = x_train.astype("float32") / 255.0
x_test = x_test.astype("float32") / 255.0

# -----------------------------------------------------------
# STEP 4: ONE-HOT ENCODE LABELS
# -----------------------------------------------------------
y_train_cat = to_categorical(y_train, 10)
y_test_cat = to_categorical(y_test, 10)

# -----------------------------------------------------------
# STEP 5: BUILD THE MLP MODEL
# -----------------------------------------------------------
model = Sequential([
    Flatten(input_shape=(28, 28)),   # Converts 28x28 → 784 vector
    Dense(128, activation='relu'),   # Hidden layer 1
    Dense(64, activation='relu'),    # Hidden layer 2
    Dense(10, activation='softmax')  # Output layer → 10 digits
])

# -----------------------------------------------------------
# STEP 6: COMPILE THE MODEL
# -----------------------------------------------------------
model.compile(
    optimizer='adam',
    loss='categorical_crossentropy',
    metrics=['accuracy']
)

# -----------------------------------------------------------
# STEP 7: TRAIN THE MODEL
# -----------------------------------------------------------
history = model.fit(
    x_train, y_train_cat,
    epochs=5,
    batch_size=128,
    validation_split=0.1,
    verbose=2
)

# -----------------------------------------------------------
# STEP 8: TEST SET EVALUATION
# -----------------------------------------------------------
print("\nModel Evaluation on Test Set:")
model.evaluate(x_test, y_test_cat, verbose=2)

# -----------------------------------------------------------
# STEP 9: MODEL SUMMARY
# -----------------------------------------------------------
print("\nModel Summary:")
model.summary()

# -----------------------------------------------------------
# STEP 10: PREDICTIONS
# -----------------------------------------------------------
predictions = model.predict(x_test)

# Display prediction for one sample
index = 1020
print("\nPrediction probabilities for test image #{}:".format(index))
print(predictions[index])
print("Predicted Digit:", np.argmax(predictions[index]))
print("Actual Digit:", y_test[index])

# Show image
plt.imshow(x_test[index], cmap='gray')
plt.title(f"Actual: {y_test[index]}, Predicted: {np.argmax(predictions[index])}")
plt.show()

# -----------------------------------------------------------
# STEP 11: CONFUSION MATRIX
# -----------------------------------------------------------
y_pred_classes = np.argmax(predictions, axis=1)

cm = confusion_matrix(y_test, y_pred_classes)
plt.figure(figsize=(10, 8))
sns.heatmap(cm, annot=True, fmt='d', cmap="Blues",
            xticklabels=range(10), yticklabels=range(10))
plt.title("Confusion Matrix - MNIST MLP")
plt.xlabel("Predicted")
plt.ylabel("Actual")
plt.show()

# -----------------------------------------------------------
# STEP 12: CLASSIFICATION REPORT
# -----------------------------------------------------------
print("\nClassification Report:\n")
print(classification_report(y_test, y_pred_classes))

# -----------------------------------------------------------
# END OF PROGRAM
# -----------------------------------------------------------
print("\n✔ Program Executed Successfully!")
